<div class="col-lg-4 col-lg-offset-4 well">
<fieldset>
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.label :Contrase単a %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Contrase単a' %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_Contrase単a %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirmar Contrase単a' %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "usuarios/shared/links" %>
