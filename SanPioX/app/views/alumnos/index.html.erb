<h1>Alumnos</h1>
<div class=" table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Ci</th>
      <th>Fechanac</th>
      <th>Luegarnac</th>
      <th>Domicilio</th>
      <th>Nombrepa</th>
      <th>Profesionpa</th>
      <th>Nombrema</th>
      <th>Profesionma</th>
      <th>Numerotelef</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alumnos.each do |alumno| %>
      <tr>
        <td><%= alumno.nombre %></td>
        <td><%= alumno.apellido %></td>
        <td><%= alumno.ci %></td>
        <td><%= alumno.fechanac %></td>
        <td><%= alumno.luegarnac %></td>
        <td><%= alumno.domicilio %></td>
        <td><%= alumno.nombrepa %></td>
        <td><%= alumno.profesionpa %></td>
        <td><%= alumno.nombrema %></td>
        <td><%= alumno.profesionma %></td>
        <td><%= alumno.numeroTelef %></td>
        <td><%= link_to 'Mostrar', alumno %></td>
        <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
        <td><%= link_to 'Eliminar', alumno, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Nuevo', new_alumno_path %>
