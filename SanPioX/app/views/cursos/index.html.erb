<h1>Cursos</h1>
<div class=" table-responsive">
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Curso</th>
      <th>Especialidad</th>
      <th>Seccion</th>
      <th>AÃ±o</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.curso %></td>
        <td><%= curso.especialidad %></td>
        <td><%= curso.seccion %></td>
        <td><%= curso.tiempo %></td>
        <td><%= link_to 'Mostrar', curso %></td>
        <td><%= link_to 'Editar', edit_curso_path(curso) %></td>
        <td><%= link_to 'Eliminar', curso, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
